<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMain"
    android:layout_marginTop="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_fans"
            android:src="@mipmap/icon_attention"
            style="@style/msg_icon_style"/>
        <ImageView
            android:id="@+id/btn_like"
            android:src="@mipmap/icon_like"
            style="@style/msg_icon_style"/>
        <ImageView
            android:id="@+id/btn_aite"
            android:src="@mipmap/icon_aite"
            style="@style/msg_icon_style"/>
        <ImageView
            android:id="@+id/btn_comment"
            android:src="@mipmap/icon_comment"
            style="@style/msg_icon_style"/>
        <ImageView
            android:id="@+id/btn_attention"
            android:src="@mipmap/icon_attention_msg"
            style="@style/msg_icon_style"/>
        <ImageView
            android:id="@+id/btn_notity"
            android:src="@mipmap/icon_notity"
            style="@style/msg_icon_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="粉丝"
            style="@style/msg_text_style"/>
        <TextView
            android:text="赞"
            style="@style/msg_text_style"/>
        <TextView
            android:text="\@我的"
            style="@style/msg_text_style"/>
        <TextView
            android:text="评论"
            style="@style/msg_text_style"/>
        <TextView
            android:text="关注"
            style="@style/msg_text_style"/>
        <TextView
            android:id="@+id/tv_notify"
            android:text="通知"
            style="@style/msg_text_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/edit_linearlayout_shape_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_search"/>
        <EditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="搜索用户昵称"
            android:background="@null"
            android:textColor="#2c2c2c"
            android:textColorHint="#2c2c2c"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_conversationlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--<fragment-->
    <!--android:id="@+id/conversationlist"-->
    <!--android:name="io.rong.imkit.fragment.ConversationListFragment"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="gone"/>

</LinearLayout>